<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{{site.title}}</h3>
        <p>{{site.description}}</p>
      </div>

      <div class="footer-section">
        <h4>Follow</h4>
        <ul class="social-links">
          {{#if site.twitter}}
            <li><a href="https://twitter.com/{{site.twitter}}" target="_blank">Twitter</a></li>
          {{/if}}
          {{#if site.facebook}}
            <li><a href="https://facebook.com/{{site.facebook}}" target="_blank">Facebook</a></li>
          {{/if}}
          <li><a href="/rss">RSS</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>Links</h4>
        <ul>
          {{#each site.secondary_navigation}}
            <li><a href="{{url}}">{{label}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {{date created_at format="YYYY"}} {{site.title}}. All rights reserved.</p>
      <p>Powered by <a href="https://elide.dev" target="_blank">Elide</a></p>
    </div>
  </div>
</footer>

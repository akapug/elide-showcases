<!DOCTYPE html>
<html lang="{{site.lang}}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{site.title}} - {{site.description}}</title>
  <meta name="description" content="{{site.description}}">

  <link rel="stylesheet" href="{{asset 'css/style.css'}}">
  <link rel="alternate" type="application/rss+xml" title="{{site.title}}" href="/rss">

  {{#if site.icon}}
    <link rel="icon" href="{{site.icon}}">
  {{/if}}
</head>
<body class="home-template">
  {{> header}}

  <main class="site-main">
    <div class="container">
      {{#if posts}}
        <div class="post-feed">
          {{#each posts}}
            {{> post-card}}
          {{/each}}
        </div>

        {{#if pagination}}
          <nav class="pagination">
            {{#if pagination.prev}}
              <a href="/?page={{pagination.prev}}" class="pagination-prev">← Newer Posts</a>
            {{/if}}

            <span class="pagination-info">
              Page {{pagination.page}} of {{pagination.pages}}
            </span>

            {{#if pagination.next}}
              <a href="/?page={{pagination.next}}" class="pagination-next">Older Posts →</a>
            {{/if}}
          </nav>
        {{/if}}
      {{else}}
        <div class="no-posts">
          <h2>No posts yet</h2>
          <p>Check back soon for new content!</p>
        </div>
      {{/if}}
    </div>
  </main>

  {{> footer}}

  <script src="{{asset 'js/main.js'}}"></script>
</body>
</html>

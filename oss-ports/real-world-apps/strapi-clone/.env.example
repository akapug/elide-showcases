# Environment
NODE_ENV=development

# Server
PORT=1337
HOST=0.0.0.0

# Database
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=./data/database.db

# For PostgreSQL:
# DATABASE_CLIENT=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=cms
# DATABASE_USER=postgres
# DATABASE_PASSWORD=password

# For MySQL:
# DATABASE_CLIENT=mysql
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=cms
# DATABASE_USER=root
# DATABASE_PASSWORD=password

# Security
JWT_SECRET=change-this-to-a-long-random-string
ADMIN_JWT_SECRET=change-this-to-another-long-random-string
API_TOKEN_SALT=change-this-to-yet-another-random-string

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:1337

# Media
MEDIA_PROVIDER=local
MEDIA_DIRECTORY=./public/uploads

# For S3:
# MEDIA_PROVIDER=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key

# Email (optional)
# EMAIL_PROVIDER=sendgrid
# EMAIL_FROM=noreply@yourapp.com
# SENDGRID_API_KEY=your-api-key

# OAuth (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn

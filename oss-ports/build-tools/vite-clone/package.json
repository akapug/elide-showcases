{
  "name": "@elide/vite-clone",
  "version": "1.0.0",
  "description": "Next-generation frontend tooling powered by Elide",
  "keywords": [
    "elide",
    "vite",
    "build-tool",
    "bundler",
    "dev-server",
    "hmr",
    "esm",
    "frontend"
  ],
  "author": "Elide Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elide-dev/elide-showcases",
    "directory": "oss-ports/build-tools/vite-clone"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "vite-clone": "./bin/vite-clone.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./plugin-react": {
      "types": "./dist/plugins/react.d.ts",
      "import": "./dist/plugins/react.mjs",
      "require": "./dist/plugins/react.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "bin",
    "client.d.ts"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "peerDependencies": {
    "@elide/runtime": ">=1.0.0"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "connect": "^3.7.0",
    "ws": "^8.13.0",
    "chokidar": "^3.5.3",
    "picocolors": "^1.0.0",
    "esbuild": "^0.18.0",
    "postcss": "^8.4.27",
    "rollup": "^3.26.0"
  },
  "devDependencies": {
    "@types/connect": "^3.4.35",
    "@types/node": "^20.4.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.0"
  }
}

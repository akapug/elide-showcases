{
  "name": "elide-todo-app",
  "version": "1.0.0",
  "description": "Native mobile TODO app built with Elide",
  "main": "main.ts",
  "scripts": {
    "dev:ios": "elide run --target mobile --platform ios main.ts",
    "dev:android": "elide run --target mobile --platform android main.ts",
    "build:ios": "elide build --target mobile --platform ios --output ./dist/TODO.app",
    "build:android": "elide build --target mobile --platform android --output ./dist/TODO.apk"
  },
  "elide": {
    "target": "mobile",
    "optimize": "size",
    "minify": true,
    "icon": "./assets/icon.png"
  }
}

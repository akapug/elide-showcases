{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "debugger/src/**/*",
    "repl/src/**/*",
    "inspector/src/**/*",
    "profiler/src/**/*",
    "testing/src/**/*",
    "quality/src/**/*",
    "docs/src/**/*",
    "cli/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./debugger" },
    { "path": "./repl" },
    { "path": "./inspector" },
    { "path": "./profiler" },
    { "path": "./testing" },
    { "path": "./quality" },
    { "path": "./docs" },
    { "path": "./cli" }
  ]
}

{
  "name": "@elide/video-streaming-platform",
  "version": "1.0.0",
  "description": "Production-ready video streaming platform with ML-powered features using Elide polyglot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "benchmark": "tsx benchmarks/streaming-performance.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "elide",
    "polyglot",
    "video-streaming",
    "transcoding",
    "hls",
    "dash",
    "opencv",
    "machine-learning",
    "recommendation-engine",
    "computer-vision"
  ],
  "author": "Elide",
  "license": "MIT",
  "dependencies": {
    "@elide/runtime": "^1.0.0",
    "eventemitter3": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "python": {
    "dependencies": [
      "opencv-python>=4.8.0",
      "numpy>=1.24.0",
      "scikit-learn>=1.3.0",
      "torch>=2.1.0",
      "transformers>=4.35.0",
      "pandas>=2.1.0",
      "SpeechRecognition>=3.10.0"
    ]
  }
}

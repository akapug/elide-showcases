{
  "name": "@elide-showcases/hft-risk-engine",
  "version": "1.0.0",
  "description": "Sub-millisecond risk engine for high-frequency trading strategies - Tier S Financial Showcase",
  "main": "api/server.ts",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm api/server.ts",
    "dev": "nodemon --exec node --loader ts-node/esm api/server.ts",
    "test": "vitest run tests/",
    "test:watch": "vitest tests/",
    "benchmark": "node --loader ts-node/esm benchmarks/risk-benchmark.ts",
    "example:basic": "node --loader ts-node/esm examples/basic-risk-check.ts",
    "example:portfolio": "node --loader ts-node/esm examples/portfolio-risk.ts",
    "example:stress": "node --loader ts-node/esm examples/stress-test.ts",
    "lint": "eslint . --ext .ts"

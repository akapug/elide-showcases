    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "ws": "^8.14.2",
    "ioredis": "^5.3.2",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",

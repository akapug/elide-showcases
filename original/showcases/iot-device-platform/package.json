{
  "name": "iot-device-platform",
  "version": "1.0.0",
  "description": "Production-ready IoT Device Management Platform with MQTT, Time-series Analytics, and ML",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "simulate": "tsx examples/device-simulation.ts",
    "monitor": "tsx examples/alert-monitoring.ts",
    "benchmark": "tsx benchmarks/throughput.ts",
    "analytics": "python3 python/analytics.py",
    "anomaly": "python3 python/ml_anomaly.py",
    "forecast": "python3 python/forecast.py",
    "test": "jest",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "iot",
    "mqtt",
    "device-management",
    "time-series",
    "analytics",
    "ml",
    "anomaly-detection"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "mqtt": "^5.3.0",
    "aedes": "^0.50.0",
    "ws": "^8.14.2",
    "ioredis": "^5.3.2",
    "influx": "^5.9.3",
    "pg": "^8.11.3",
    "express": "^4.18.2",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "zod": "^3.22.4",
    "nanoid": "^3.3.7",
    "bull": "^4.11.5"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.20",
    "@types/ws": "^8.5.8",
    "@types/pg": "^8.10.7",
    "typescript": "^5.2.2",
    "tsx": "^4.6.0",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "eslint": "^8.53.0"
  }
}

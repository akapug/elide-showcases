{
  "name": "@elide/gis-platform",
  "version": "1.0.0",
  "description": "Enterprise Geographic Information System powered by Elide's polyglot runtime",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "benchmark": "ts-node benchmarks/gis-performance.ts",
    "demo": "ts-node examples/gis-demo.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "gis",
    "geospatial",
    "mapping",
    "spatial-analysis",
    "polyglot",
    "elide",
    "geopandas",
    "shapely",
    "rasterio"
  ],
  "author": "Elide Team",
  "license": "MIT",
  "dependencies": {
    "@elide/runtime": "^1.0.0"
  },
  "pythonDependencies": {
    "geopandas": ">=0.14.0",
    "shapely": ">=2.0.0",
    "rasterio": ">=1.3.0",
    "gdal": ">=3.7.0",
    "networkx": ">=3.1",
    "geopy": ">=2.4.0",
    "pyproj": ">=3.6.0",
    "folium": ">=0.15.0",
    "matplotlib": ">=3.8.0",
    "scikit-learn": ">=1.3.0",
    "numpy": ">=1.24.0",
    "pandas": ">=2.0.0",
    "scipy": ">=1.11.0",
    "rtree": ">=1.1.0",
    "fiona": ">=1.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  }
}

{
  "name": "@elide-showcases/crypto-trading-bot",
  "version": "1.0.0",
  "description": "High-performance cryptocurrency trading bot demonstrating Elide's polyglot capabilities with TypeScript + Python (ccxt, ta-lib, pandas)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "live-demo": "tsx examples/live-trading-demo.ts",
    "backtest": "tsx examples/backtest-demo.ts",
    "benchmark": "tsx benchmarks/latency-benchmark.ts",
    "paper-trade": "USE_SANDBOX=true tsx examples/live-trading-demo.ts",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "elide",
    "polyglot",
    "cryptocurrency",
    "trading-bot",
    "algorithmic-trading",
    "bitcoin",
    "ethereum",
    "ccxt",
    "ta-lib",
    "technical-analysis",
    "machine-learning",
    "backtesting",
    "typescript",
    "python",
    "high-frequency-trading",
    "arbitrage",
    "momentum-strategy",
    "mean-reversion",
    "risk-management"
  ],
  "author": "Elide Showcases",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "pythonDependencies": {
    "ccxt": "^4.2.0",
    "ta-lib": "^0.4.28",
    "pandas": "^2.1.4",
    "numpy": "^1.26.2",
    "scikit-learn": "^1.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elide-dev/elide-showcases.git",
    "directory": "showcases/crypto-trading-bot"
  }
}

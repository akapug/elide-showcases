{
  "name": "speech-to-text-service",
  "version": "1.0.0",
  "description": "Production-ready speech-to-text service with Whisper, streaming transcription, and speaker diarization",
  "main": "api/server.ts",
  "type": "module",
  "scripts": {
    "start": "tsx api/server.ts",
    "dev": "tsx watch api/server.ts",
    "test": "tsx tests/transcription-test.ts",
    "test:all": "tsx tests/transcription-test.ts && tsx tests/streaming-test.ts && tsx tests/diarization-test.ts",
    "test:streaming": "tsx tests/streaming-test.ts",
    "test:diarization": "tsx tests/diarization-test.ts",
    "benchmark": "tsx benchmarks/whisper-benchmark.ts",
    "benchmark:streaming": "tsx benchmarks/streaming-benchmark.ts",
    "benchmark:quality": "tsx benchmarks/quality-benchmark.ts",
    "example:podcast": "tsx examples/podcast-transcription.ts",
    "example:meeting": "tsx examples/meeting-notes.ts",
    "example:live": "tsx examples/live-captioning.ts",
    "example:multilang": "tsx examples/multilanguage.ts"
  },
  "keywords": [
    "speech-to-text",
    "whisper",
    "transcription",
    "speaker-diarization",
    "real-time",
    "streaming",
    "websocket",
    "typescript",
    "python",
    "polyglot"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.9",
    "@types/multer": "^1.4.11",
    "@types/cors": "^2.8.17",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "author": "Elide Showcases",
  "license": "MIT"
}

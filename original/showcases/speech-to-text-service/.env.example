# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Whisper Model Configuration
WHISPER_MODEL=base              # tiny, base, small, medium, large
WHISPER_DEVICE=cpu              # cpu, cuda
WHISPER_COMPUTE_TYPE=int8       # int8, float16, float32
USE_FASTER_WHISPER=true         # Use faster-whisper for better performance

# Processing Configuration
MAX_AUDIO_SIZE=104857600        # 100MB
MAX_AUDIO_DURATION=3600         # 1 hour
CHUNK_DURATION=30               # 30 seconds for streaming
OVERLAP_DURATION=2              # 2 seconds overlap

# Speaker Diarization
ENABLE_DIARIZATION=true
MIN_SPEAKERS=1
MAX_SPEAKERS=10
HF_TOKEN=                       # HuggingFace token for pyannote models

# Language Support
DEFAULT_LANGUAGE=auto           # auto-detect or specific language code
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,zh,ja,ko

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30000     # 30 seconds

# Audio Processing
SAMPLE_RATE=16000               # Whisper requires 16kHz
AUDIO_FORMAT=wav                # wav, mp3, m4a, flac, ogg
NOISE_REDUCTION=true
VAD_AGGRESSIVENESS=2            # 0-3, higher = more aggressive

# Performance
MAX_CONCURRENT_JOBS=4
WORKER_POOL_SIZE=2
CACHE_ENABLED=true
CACHE_TTL=3600                  # 1 hour

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=info                  # error, warn, info, debug

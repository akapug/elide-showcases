{
  "name": "@elide/healthcare-emr-system",
  "version": "1.0.0",
  "description": "Production Healthcare EMR System with ML Diagnosis, DICOM Imaging, HL7 FHIR, and HIPAA Compliance",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch examples/emr-demo.ts",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "benchmark": "tsx benchmarks/emr-perf.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "demo": "node --run build && node dist/examples/emr-demo.js"
  },
  "keywords": [
    "elide",
    "healthcare",
    "emr",
    "ehr",
    "medical-records",
    "dicom",
    "fhir",
    "hipaa",
    "ml-diagnosis",
    "clinical-decision-support",
    "medical-imaging",
    "hl7",
    "typescript",
    "python",
    "polyglot"
  ],
  "author": "Elide Team",
  "license": "MIT",
  "dependencies": {
    "@elide/runtime": "^1.0.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0",
    "date-fns": "^2.30.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "vitest": "^1.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0"
  },
  "pythonDependencies": {
    "pydicom": "^2.4.0",
    "scikit-learn": "^1.3.0",
    "fhir.resources": "^7.1.0",
    "pandas": "^2.1.0",
    "numpy": "^1.24.0",
    "pillow": "^10.0.0",
    "matplotlib": "^3.7.0",
    "opencv-python": "^4.8.0",
    "tensorflow": "^2.14.0",
    "torch": "^2.1.0",
    "hl7": "^0.4.5",
    "cryptography": "^41.0.0"
  },
  "elide": {
    "polyglot": {
      "python": {
        "enabled": true,
        "version": "3.11",
        "venv": ".venv"
      }
    },
    "security": {
      "hipaa": true,
      "encryption": "AES-256",
      "auditLogging": true
    }
  }
}

{
  "name": "@elide-showcases/social-media-platform",
  "version": "1.0.0",
  "description": "High-performance social media platform demonstrating Elide's polyglot capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:performance": "node dist/benchmarks/platform-performance.js",
    "benchmark": "node dist/benchmarks/platform-performance.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "elide",
    "polyglot",
    "social-media",
    "ml",
    "ai",
    "transformers",
    "opencv",
    "sklearn"
  ],
  "author": "Elide Team",
  "license": "MIT",
  "dependencies": {
    "python:transformers": "^4.30.0",
    "python:torch": "^2.0.0",
    "python:opencv-python": "^4.8.0",
    "python:scikit-learn": "^1.3.0",
    "python:numpy": "^1.24.0",
    "python:pandas": "^2.0.0",
    "python:pillow": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "elide": ">=1.0.0"
  }
}

{
  "name": "@elide/etl-pipeline-polyglot",
  "version": "1.0.0",
  "description": "Production ETL pipeline with Zod (TS) + Pydantic (Python) validation and zero-copy DataFrames",
  "main": "api/server.ts",
  "type": "module",
  "scripts": {
    "start": "tsx api/server.ts",
    "dev": "tsx watch api/server.ts",
    "build": "tsc",
    "test": "tsx tests/validation-test.ts",
    "test:python": "python3 -m pytest tests/test_validators.py -v",
    "test:integration": "tsx tests/integration-test.ts",
    "test:all": "npm test && npm run test:python && npm run test:integration",
    "benchmark": "tsx benchmarks/validation-benchmark.ts",
    "benchmark:dataframes": "tsx benchmarks/dataframe-benchmark.ts",
    "benchmark:vs-microservices": "tsx benchmarks/microservices-comparison.ts",
    "example:csv": "tsx examples/csv-pipeline.ts",
    "example:json": "tsx examples/json-pipeline.ts",
    "example:streaming": "tsx examples/streaming-etl.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "keywords": [
    "etl",
    "data-pipeline",
    "validation",
    "zod",
    "pydantic",
    "pandas",
    "zero-copy",
    "polyglot",
    "dataframes",
    "schema-validation"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "csv-parse": "^5.5.3",
    "csv-stringify": "^6.4.5",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "prettier": "^3.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9"
  },
  "author": "Elide Team",
  "license": "MIT"
}

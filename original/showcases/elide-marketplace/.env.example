# Elide Marketplace Configuration

# Server Ports
PORT=3000
REGISTRY_PORT=4873
MARKETPLACE_PORT=3001
DASHBOARD_PORT=8080
ORCHESTRATOR_PORT=3002

# API URLs (for CLI tools)
ELIDE_REGISTRY_URL=http://localhost:4873
ELIDE_API_URL=http://localhost:3000
ELIDE_MARKETPLACE_URL=http://localhost:3001

# Database Paths
DATABASE_PATH=./marketplace.db
REGISTRY_DATABASE_PATH=./registry.db

# Authentication
JWT_SECRET=change-this-to-a-random-secret-key-in-production
TOKEN_EXPIRY=7d

# External Services
CDN_URL=https://cdn.elide.dev
STORAGE_BUCKET=elide-marketplace-storage

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@elide.dev
SMTP_PASS=your-smtp-password
SMTP_FROM=Elide Marketplace <noreply@elide.dev>

# Billing Configuration
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
BILLING_EMAIL=billing@elide.dev

# Feature Flags
ENABLE_SECURITY_SCANNING=true
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Service Provisioning
DEFAULT_REGION=us-east-1
SUPPORTED_REGIONS=us-east-1,us-west-2,eu-west-1,ap-southeast-1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Development
NODE_ENV=development
DEBUG=false

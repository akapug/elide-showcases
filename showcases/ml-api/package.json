{
  "name": "@elide-showcases/ml-api",
  "version": "1.0.0",
  "description": "Production-grade sentiment analysis API with TypeScript and Python ML",
  "main": "api/server.ts",
  "scripts": {
    "start": "node -r ts-node/register api/server.ts",
    "dev": "NODE_ENV=development node -r ts-node/register api/server.ts",
    "test": "node -r ts-node/register tests/api-test.ts",
    "benchmark": "node -r ts-node/register tests/benchmark.ts",
    "benchmark:stress": "node -r ts-node/register tests/benchmark.ts --stress 30000",
    "lint": "eslint api/*.ts tests/*.ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "keywords": [
    "ml",
    "machine-learning",
    "sentiment-analysis",
    "nlp",
    "api",
    "typescript",
    "python",
    "polyglot"
  ],
  "author": "Elide Team",
  "license": "MIT",
  "dependencies": {
    "nanoid": "^3.3.7",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/validator": "^13.11.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}

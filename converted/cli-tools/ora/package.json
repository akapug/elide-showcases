{
  "name": "@elide/ora",
  "version": "1.0.0",
  "description": "Elegant terminal spinner powered by Elide - 50-100x faster startup",
  "main": "index.ts",
  "type": "module",
  "bin": {
    "ora": "./cli.ts"
  },
  "scripts": {
    "build": "elide build --output ora",
    "build:all": "npm run build:linux && npm run build:macos && npm run build:windows",
    "build:linux": "elide build --platform linux-x64 --output dist/ora-linux-x64",
    "build:macos": "elide build --platform darwin-arm64 --output dist/ora-macos-arm64",
    "build:windows": "elide build --platform win32-x64 --output dist/ora-windows-x64.exe",
    "test": "elide test",
    "bench": "elide run benchmarks/spinner-perf.ts",
    "example:cli": "bash examples/cli-usage.sh",
    "example:programmatic": "elide run examples/programmatic-usage.ts",
    "example:python": "python3 examples/polyglot-cli-wrapper.py",
    "demo": "elide run cli.ts --demo",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build:all"
  },
  "keywords": [
    "elide",
    "ora",
    "spinner",
    "loading",
    "progress",
    "indicator",
    "cli",
    "terminal",
    "console",
    "animated",
    "fast",
    "performance"
  ],
  "author": "Elide Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elide-dev/ora.git"
  },
  "bugs": {
    "url": "https://github.com/elide-dev/ora/issues"
  },
  "homepage": "https://github.com/elide-dev/ora#readme",
  "npm": {
    "original": "ora",
    "downloads": "15M/week",
    "url": "https://www.npmjs.com/package/ora"
  },
  "elide": {
    "polyglot": true,
    "ready": true,
    "standalone": true,
    "platforms": [
      "linux-x64",
      "linux-arm64",
      "darwin-x64",
      "darwin-arm64",
      "win32-x64"
    ],
    "binary": {
      "name": "ora",
      "outputPath": "dist"
    },
    "optimization": {
      "stripDebug": true,
      "minify": true,
      "bundleMode": "standalone"
    }
  },
  "files": [
    "index.ts",
    "cli.ts",
    "README.md",
    "BENCHMARKS.md",
    "DISTRIBUTION.md",
    "examples/",
    "dist/"
  ],
  "engines": {
    "node": ">=18.0.0",
    "elide": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}

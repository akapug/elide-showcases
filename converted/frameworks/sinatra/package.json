{
  "name": "@elide/sinatra",
  "version": "1.0.0",
  "description": "Sinatra web framework on Elide - Classy web development with polyglot superpowers",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "node server.ts",
    "example:basic": "node examples/basic-server.ts",
    "example:middleware": "node examples/middleware-example.ts",
    "example:routing": "node examples/routing-example.ts",
    "example:polyglot": "node examples/polyglot-example.ts",
    "dev": "nodemon server.ts",
    "build": "tsc",
    "test": "jest",
    "benchmark": "node benchmarks/run.ts"
  },
  "keywords": [
    "sinatra",
    "web",
    "framework",
    "ruby",
    "dsl",
    "http",
    "server",
    "api",
    "microservices",
    "elide",
    "graalvm",
    "truffleruby",
    "polyglot",
    "python",
    "javascript",
    "performance"
  ],
  "author": "Elide Team",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.10.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "nodemon": "^3.0.2",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "elide": {
    "runtime": "graalvm",
    "polyglot": {
      "enabled": true,
      "languages": ["ruby", "js", "python"]
    },
    "ruby": {
      "implementation": "truffleruby",
      "version": "latest"
    },
    "nativeImage": {
      "enabled": true,
      "options": [
        "--no-fallback",
        "--initialize-at-build-time",
        "--language:ruby",
        "--language:python"
      ]
    },
    "optimization": {
      "level": "aggressive",
      "pgo": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elide/showcases"
  },
  "bugs": {
    "url": "https://github.com/elide/showcases/issues"
  },
  "homepage": "https://github.com/elide/showcases/tree/main/converted/frameworks/sinatra"
}

{
  "name": "@elide/koa",
  "version": "1.0.0",
  "description": "Koa framework on Elide - Expressive HTTP middleware with polyglot superpowers",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "node server.ts",
    "example:basic": "node examples/basic-server.ts",
    "example:middleware": "node examples/middleware-example.ts",
    "example:routing": "node examples/routing-example.ts",
    "example:polyglot": "node examples/polyglot-example.ts",
    "dev": "nodemon server.ts",
    "build": "tsc",
    "test": "jest",
    "benchmark": "node benchmarks/run.ts"
  },
  "keywords": [
    "koa",
    "web",
    "framework",
    "middleware",
    "http",
    "server",
    "elide",
    "graalvm",
    "polyglot",
    "python",
    "ruby",
    "performance",
    "async",
    "await"
  ],
  "author": "Elide Team",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.10.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "nodemon": "^3.0.2",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "elide": {
    "runtime": "graalvm",
    "polyglot": {
      "enabled": true,
      "languages": ["js", "python", "ruby"]
    },
    "nativeImage": {
      "enabled": true,
      "options": [
        "--no-fallback",
        "--initialize-at-build-time"
      ]
    },
    "optimization": {
      "level": "aggressive",
      "pgo": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elide/showcases"
  },
  "bugs": {
    "url": "https://github.com/elide/showcases/issues"
  },
  "homepage": "https://github.com/elide/showcases/tree/main/converted/frameworks/koa"
}
